body

  .part-one
    .container-fluid
      .row
        .col-md-12.lt-blue.top
          p.signing-up Sign in | Sign up

      .row
        .col-md-2.lt-blue.top-height
        .col-md-4.white.top-height.left-curve
          img(src='../images/savings-multiplied-logo.png').logo
        .col-md-4.white.top-height.right-curve
          .row.buttons-tagline
            p
              button.btn.btn-primary.btn-xs.dk-blue About
              button.btn.btn-primary.btn-xs.green Contact
              button.btn.btn-primary.btn-xs.dk-purp Blog
              button.btn.btn-primary.btn-xs.br-pink Press
          .row.white
            img(src='../images/tagline.png')
        .col-md-2.lt-blue.top-height

    nav.navbar.navbar-default.nav-container
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse.nav-dothis
          ul.nav.navbar-nav
            li: a(href='#') Buy 
                span.sr-only (current)
            li: a(href='/merchy') Sell 
                span.sr-only (current)
            li: a(href='#') How it Works
                span.sr-only (current)
            li: a(href='#') Links
                span.sr-only (current)
            li: a(href='#') Community
                span.sr-only (current)
          form.navbar-form.navbar-left(role='search')
            .form-group
              input.form-control(type='text', placeholder='Search')
          ul.nav.navbar-nav.navbar-right

    .part-two
      .row
        .col-md-2.dk-blue.another-height.move-left
        .col-md-3.white.another-height.left-curve2
          form.custom-form.right-curve.left-curve.right-curve2.left-curve2
            h4.center-it Limit your search by:
            .input-group.twenty-pix
              input.form-control(type='text', aria-describedby='basic-addon2')
              span#basic-addon2.input-group-addon Search
            .radio.twenty-pix
              label(for='condition') Condition:
                  input#new(type='radio', name='conditionRadios', value='option1')
                  input#gently-used(type='radio', name='conditionRadios', value='option2')
            .radio.twenty-pix
              label(for='chooseSize') Size:
                input#size4(type='radio', name='sizeRadios', value='option1')
                4 
