doctype html(lang='en')
head
  meta(charset='utf-8')
  title: SM2-Home
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
  link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Corben:400,700')
