doctype html(lang='en')
head
  title: Registration
  link(rel='stylesheet', href='../stylesheets/registration.css')

  include ./pageheader.jade

  .register-main
    h1 Register for Your Account
      form#registerForm(method='POST', action='/users/register')
        .formfield Username
          input#username(type='text', name='username')
        .formfield Password
          input#password(type='password', name='password')
        input.submitButton(type='submit')

  include ./pagefooter.jade
